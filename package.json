{
  "name": "golden-space",
  "version": "1.0.0",
  "description": "A tool for determining the space in Web Apps",
  "main": "index.html",
  "author": "Brian Holt <bholtbholt@icloud.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean-dist && yarn css-build",
    "clean-dist": "rm -rf dist/",
    "css-build": "postcss src/css/index.css -c postcss.config.js -o dist/styles.css",
    "css-watch": "postcss src/css/index.css -c postcss.config.js -o dist/styles.css -w",
    "postcss": "node_modules/.bin/postcss",
    "start": "yarn css-watch"
  },
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "cssnano": "^3.10.0",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "postcss-nested": "^3.0.0",
    "prettier": "^1.11.1"
  }
}
